{
  "name": "homework-management-system",
  "version": "1.0.0",
  "description": "A full-stack homework management system with PDF syllabus extraction and assignment editing",
  "private": true,
  "workspaces": [
    "frontend/assignment-editor"
  ],
  "scripts": {
    "dev:frontend": "cd frontend/assignment-editor && yarn dev",
    "build:frontend": "cd frontend/assignment-editor && yarn build",
    "install:frontend": "cd frontend/assignment-editor && yarn install",
    "dev:backend": "cd backend && uv run python main.py",
    "install:backend": "cd backend && uv sync",
    "dev": "concurrently \"yarn dev:frontend\" \"yarn dev:backend\"",
    "install:all": "yarn install:frontend && yarn install:backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.12.0"
  }
}
