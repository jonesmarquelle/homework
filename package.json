{
  "name": "homework-management-system",
  "version": "1.0.0",
  "description": "A full-stack homework management system with PDF syllabus extraction and assignment editing",
  "private": true,
  "workspaces": [
    "frontend/assignment-editor"
  ],
  "scripts": {
    "dev:frontend": "cd frontend/assignment-editor && npm run dev",
    "build:frontend": "cd frontend/assignment-editor && npm run build",
    "install:frontend": "cd frontend/assignment-editor && npm install",
    "dev:backend": "cd backend && python -m src.pdf_analyzer",
    "install:backend": "cd backend && uv sync",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "install:all": "npm run install:frontend && npm run install:backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.12.0"
  }
}
